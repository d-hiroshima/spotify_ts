# Database
DATABASE_URL="postgresql://user:password@localhost:5432/spotify_stats"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth - 本番環境では適切なURLとシークレットに変更してください
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secure-random-secret-key-here"
AUTH_URL="http://localhost:3000"
AUTH_SECRET="your-secure-random-secret-key-here"
AUTH_TRUST_HOST="true"

# Spotify API - Spotify Developer Dashboardから取得
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Monitoring
ENABLE_PERFORMANCE_MONITORING="true"
LOG_LEVEL="info"